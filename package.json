{
  "name": "digital-design-platform",
  "version": "1.0.0",
  "description": "Platform for connecting digital design clients and freelancers",
  "main": "start.js",
  "bin": "start.js",
  "scripts": {
    "start": "node start.js",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd frontend && npm install",
    "install-server": "npm install",
    "install": "npm run install-server && npm run install-client",
    "build": "pkg . --targets node18-win-x64 --output dist/digital-design-platform.exe"
  },
  "keywords": [
    "digital-design",
    "freelance",
    "platform"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^7.1.0",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "open": "^8.4.2",
    "react-router-dom": "^7.6.0",
    "pkg": "^5.8.1"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22"
  },
  "pkg": {
    "targets": [ "node18-win-x64" ],
    "outputPath": "dist",
    "assets": [
      "frontend/**/*",
      "backend/**/*",
      "node_modules/**/*"
    ],
    "scripts": [
      "start.js",
      "backend/**/*.js",
      "frontend/**/*.js"
    ]
  }
}
